{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES6",
        "lib": ["ESNext", "DOM"],
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "noImplicitOverride": false,
        "baseUrl": "src",
        "paths": {
            "SE": ["SnowballEngine/SnowballEngine.ts"],
            "Config": ["../SnowballEngineConfig.json"],
            "Utility/*": ["SnowballEngine/Utilities/*"],
            "Input/*": ["SnowballEngine/Input/*"],
            "Assets/*": ["SnowballEngine/Assets/*"],
            "Audio/*": ["SnowballEngine/Audio/*"],
            "GameObject/*": ["SnowballEngine/GameObject/*"]
        }
    }
}
